<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <title>{{pageTitle}}</title>
    <meta name="description" content="Junior makers program website">
    <meta name="viewport" content="width=device-width, initial-scale = 1.0, maximum-scale=1.0, user-scalable=no">

    <link rel="manifest" href="/manifest.webmanifest">
    <link rel="icon" href="/favicon.png">

   <!-- importing needed libraries -->
   <link rel="stylesheet" href="/css/normalize.css">
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
   <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css'>
   <link href="/css/mdb.min.css" rel="stylesheet">

   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    {{--  importing fonts  --}}
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Open+Sans|Poppins|Ubuntu" rel="stylesheet">

    <!-- main CSS style sheet -->
    <link rel="stylesheet" href="/css/course.css">
</head>

<body>
    <!--[if IE]>
    <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
    <![endif]-->
    <div class="s-layout">
        <!-- Sidebar -->
        <div class="s-layout__sidebar">
          <a class="s-sidebar__trigger" href="#">
             <i class="fa fa-bars"></i>
          </a>
        
          <nav class="s-sidebar__nav">
            <a href="/" id="back-course">
                <i class="fas fa-play"></i><span>Home</span>
            </a>
            <ul>
                @each(chapter in chaptersList)
                <li class="lecture-nav"><span>{{chapter.title}}</span><i class="fas fa-play"></i></li>
                <li>
                    <ul class="lesson-navContainer">
                        @each(lect in chapter.lectures)
                        <li class="lesson-nav">
                            @if(lect.id > newProgress.lastLecture + 1)
                            <div class="disabledLesson">
                            @endif
                            <a href="/courses/classroom/{{courseId}}/{{lect.id}}">
                                @if(lect.id <= newProgress.lastLecture)
                                <i class="fas fa-check"></i>
                                @else
                                <i class="fas fa-circle"></i>
                                @endif
                                <span class="lesson-in">{{lect.title}}</span>
                            </a>
                            @if(lect.id > newProgress.lastLecture + 1)
                            </div>
                            @endif
                        </li>
                        @endeach
                        <li class="lesson-nav">
                            <a href="/courses/classroom/quiz/{{courseId}}/{{chapter.id}}">
                                <i class="fas fa-circle"></i>
                                <span class="lesson-in">Quiz</span>
                            </a>
                        </li>
                    </ul>
                </li>
                @endeach
                
            </ul>
          </nav>
        </div>
        
        <!-- Content -->
        <main class="s-layout__content">
            <nav id="navbar">
                <div id="container">
                        <h1>quiz title</h1>
                        <a href="#" data-toggle="modal" data-target="#myModal"><h5>SEND FEEDBACK</h5></a>
                </div>
            </nav> 




            <section id="main-content">
                <style scoped>
                    #main-content{
                        position: relative;
                    }
                    hr{
                        margin-top: 0;
                    }
                </style>

                <h5>Question <span>1</span> out of {{questions.length}} </h5>
                <ol class="quiz-tracker">
                        @each(question in questions)
                            <li class="step"><span class="step-name"></span></li>
                        @endeach
                </ol>
                      
                <div class="quiz">
                    <hr>
                    <h2>Question 2 :</h2>
                    <p>Am i a joke to you?</p>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="answer1">
                        <label class="form-check-label" for="answer1"> A. &nbsp;Yes</label>
                    </div>
                    <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="answer2">
                            <label class="form-check-label" for="answer2"> B. &nbsp;No</label>
                    </div>
                    <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="answer3">
                            <label class="form-check-label" for="answer3"> C. &nbsp;Well yes, But actually no</label>
                    </div>
                </div>  

                <a id="quiz-restart" href="#"><button>Restart</button></a>
                <a id="quiz-next" href="#"><button class="btn">Next</button></a>

            </section>
             
        </main>
    </div>
    <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog" >
            
              <div class="modal-content" style="border-radius:10px">
                <div class="modal-header" id="report-header">
                  
                  <h4 class="modal-title" >Send a report </h4>
                  <button type="button" class="close" data-dismiss="modal" >&times;</button>
                </div>
                
                <div class="modal-body">
                  
            <form  id="report_form">  
            <h1> What is the reason of the report  </h1>  
            <div id="radio_bottom">   
                    <div class="custom-control custom-radio">
                        <input type="radio" class="custom-control-input" id="Option2" name="materialExampleRadios">
                        <label class="custom-control-label" for="Option2">Wrong Answers</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" class="custom-control-input" id="Option3" name="materialExampleRadios">
                        <label class="custom-control-label" for="Option3">Irrelvent Question</label>
                    </div>
                    <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="Option3" name="materialExampleRadios">
                            <label class="custom-control-label" for="Option3">Others</label>
                    </div>
                </div>
          <h1 style="margin-top: 26px;"> Can you provide us with some details </h1>
          <div class="md-form">
            <textarea id="txtarea" class="md-textarea form-control" rows="2"></textarea>
            <label for="txtarea">State the question/answer and the exact reason...</label>
          </div>
          </form>
          
                </div>
                
                <div style="padding-right: 26px; margin-bottom:20px;" >
                  <button type="button" class="btn btn-success saveboutton pull-right" style="margin-left: 10px;">Send</button>
                  <button type="button" class="btn btn-outline-success waves-effect resetboutton pull-right">cancel</button>
                </div>
              </div>
              
              
            </div>
            </div>
    <!-- needed scripts -->
    <script src="/js/vendor/modernizr-3.7.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <!-- main scripts file -->
    <script src="/js/main.js"></script>
    <script src="/js/myScript.js"></script>
    

    <!-- Google Analytics
    UA-XXXXX-Y to be replaced with our site's ID. -->
    <script>
    window.ga = function () { ga.q.push(arguments) }; ga.q = []; ga.l = +new Date;
    ga('create', 'UA-XXXXX-Y', 'auto'); ga('set','transport','beacon'); ga('send', 'pageview')
    </script>
    <script src="https://www.google-analytics.com/analytics.js" async defer></script>
    <script src="/js/Heart animation.js"></script>
    <script src="/js/mdb.min.js"></script>

</body>

</html>

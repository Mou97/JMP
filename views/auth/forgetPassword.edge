<!doctype html>
<html lang="en">
    <head>
            <meta charset="utf-8">
            <title>Login | Junior Makers Programe</title>
            <meta name="description" content="Network of scientific clubs specialized in the field of Electronics, Robotics, Programming and Computer Science dedicated to the next generation">
            <meta property="og:description" content="Network of scientific clubs specialized in the field of Electronics, Robotics, Programming and Computer Science dedicated to the next generation" />
            <meta name="twitter:description" content="Network of scientific clubs specialized in the field of Electronics, Robotics, Programming and Computer Science dedicated to the next generation" />
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="icon" href="/favicon.png">
            <!-- importing needed libraries -->
            <link rel="stylesheet" href="/css/normalize.css">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
            <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css'>
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
            {{--  importing fonts  --}}
            <link href="https://fonts.googleapis.com/css?family=Montserrat|Poppins|Ubuntu" rel="stylesheet">

            <!-- main CSS style sheet -->
            <link rel="stylesheet" href="/css/main.css">
    </head>
    <body>
        <div id="contain">
            <div id="background_rounded">
                <a href="/"><img src="/images/logoBig.png" id="background_rounded_image"></a>
            </div>
            <svg class="college-separator" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 2560 123" version="1.1" preserveAspectRatio="none">
                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                        <g transform="translate(0.000000, -148.000000)" fill="#FFFFFF"><path d="M0 271L0 151C346 221.165 792.769 261 1280 261 1767.231 261 2214 218.166 2560 148L2560 271 0 271Z"></path>
                        </g>
                    </g>
            </svg>
            
            <div id="center_fillingInfosBox">
                <h2  style="z-index:5;">Login to <span>Jonior makers</span></h2>
                <form class="fillingInfosBox" action="/auth/forgetPassword" method="POST">
                    @if(error)
                    <div class="alert alert-danger" style="margin-bottom: 0">This user does not exist</div>
                    @endif
                    @if(msg)
                    <div class="alert alert-success" style="margin-bottom: 0">We have sent you a confirmation email,check your inbox</div>
                    @endif
                    <p>Fill in your email so we can send you your new password</p>
                        <div class="form-group">
                                <label for="pwd">Email address :</label>
                                <input type="email" class="form-control" id="email_login" name="email">
                        </div>

                        

                        <input type="submit" value="Send" class="btn" id="submit-form">
                        <div id="loginFooter">
                            <p><a href="/"> Back to home</a></p>
                        </div>


                    </form>
                
            </div>
            

        </div>
        <script src="/js/myScript.js"></script>

    </body>
</html>